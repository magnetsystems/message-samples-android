<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/defaultPadding">

    <Button
        android:id="@+id/publishCreateBtn"
        android:layout_width="match_parent"
        android:text="@string/createChannel"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/publishSubscribedBtn"
        android:layout_width="match_parent"
        android:text="@string/subscribedChannels"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/publishPublicBtn"
        android:layout_width="match_parent"
        android:text="@string/allPublicChannels"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/publishPrivateBtn"
        android:layout_width="match_parent"
        android:text="@string/privateChannels"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/publishFindBtn"
        android:layout_width="match_parent"
        android:text="@string/findChannels"
        android:layout_height="wrap_content" />

</LinearLayout>
