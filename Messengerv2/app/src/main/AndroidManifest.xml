<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.magnet.magntetchatapp">

    <application
        android:name=".core.CurrentApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name=".ui.activities.section.splash.SplashActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.section.login.LoginActivity"
            android:configChanges="keyboard|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".ui.activities.section.register.RegisterActivity"
            android:configChanges="keyboard|orientation"
            android:label="@string/text_create_new_user"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.RegisterTheme" />
        <activity
            android:name=".ui.activities.section.home.HomeActivity"
            android:configChanges="keyboard|orientation"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.HomeTheme" />
        <activity
            android:name=".ui.activities.section.edit.EditProfileActivity"
            android:configChanges="keyboard|orientation"
            android:label="@string/text_edit_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.EditProfileTheme" />
        <activity
            android:name=".ui.activities.section.edit.FirstSetupActivity"
            android:configChanges="keyboard|orientation"
            android:label="@string/text_edit_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FirstSetupTheme" />
    </application>

</manifest>
