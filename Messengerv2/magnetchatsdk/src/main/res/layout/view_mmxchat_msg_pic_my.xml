<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/mmxchat.message.margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mmx_msg_date"
        style="@style/MMXDateHintText"
        android:hint="Thu, 11:59 PM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_3">

            <ImageView
                android:id="@+id/mmx_msg_pic"
                android:layout_width="@dimen/dimen_170"
                android:layout_height="@dimen/dimen_120"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dimen_5"
                android:scaleType="centerCrop"
                android:src="@drawable/photo_msg" />

        </FrameLayout>

        <include
            layout="@layout/part_view_profile_pic"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/dimen_5" />

    </LinearLayout>

</LinearLayout>