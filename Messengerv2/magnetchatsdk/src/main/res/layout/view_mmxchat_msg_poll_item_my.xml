<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mmx_poll_answer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_mmx_poll_my_item_default"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_7">

    <TextView
        android:id="@+id/mmx_poll_answer_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_3"
        android:layout_marginRight="@dimen/dimen_3"
        android:layout_weight="1"
        android:textColor="@color/mmx.msg.poll.light" />


    <FrameLayout
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/mmx.msg.poll.light" />

        <TextView
            android:id="@+id/mmx_poll_answer_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00"
            android:textColor="@color/mmx.msg.poll.default" />

    </FrameLayout>


</LinearLayout>