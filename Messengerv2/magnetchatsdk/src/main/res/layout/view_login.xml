<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_logo"
            style="@style/styleFitImageCenter"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginTop="@dimen/dimen_40"
            android:src="@drawable/magnet_icon_red" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/labelAdditionalInformation"
            style="@style/style_text_title"
            android:layout_marginTop="@dimen/dimen_40"
            android:text="@string/text_sign_in_to_your_account" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/loginEmail"
            style="@style/EditFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:hint="@string/text_email_adress"
            android:inputType="textEmailAddress" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/loginPassword"
            style="@style/EditFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:ems="10"
            android:hint="@string/text_password"
            android:inputType="textPassword" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/loginRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="@string/text_remember_me"
            android:textSize="@dimen/text_15" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/loginSignInBtn"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25"
            android:text="@string/text_sign_in" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/loginCreateAccountBtn"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25"
            android:text="@string/text_create_account" />
    </LinearLayout>

    <include layout="@layout/layout_please_wait_transparent" />

</FrameLayout>