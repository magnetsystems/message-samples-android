<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="7dp">

    <ImageView
        android:id="@+id/itemConversationNewMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="New unread message"
        android:src="@drawable/new_message"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/itemConversationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_one" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.magnet.magnetchat.ui.custom.FTextView
                android:id="@+id/itemConversationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="#7d7d7d" />

            <com.magnet.magnetchat.ui.custom.FTextView
                android:id="@+id/itemConversationUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/itemConversationDate"
                android:layout_toStartOf="@+id/itemConversationDate" />

        </RelativeLayout>

        <com.magnet.magnetchat.ui.custom.FTextView
            android:id="@+id/itemConversationLastMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#7d7d7d" />

    </LinearLayout>
</LinearLayout>