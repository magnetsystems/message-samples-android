<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activities.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.Toolbar"
            app:titleTextAppearance="@style/AppTheme.Toolbar.Title" />

        <LinearLayout
            android:id="@+id/viewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

            <FrameLayout
                android:id="@+id/flPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPrimaryBackground"
                    style="@style/styleCropImageCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_img_1"/>

                <LinearLayout
                    android:id="@+id/llPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_30">

                    <ImageView
                        style="@style/styleFitImageCenter"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_many" />

                    <View
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="match_parent" />

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <com.magnet.magnetchat.ui.custom.FTextView
                            style="@style/style_text_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Developer Week 2016 Forum"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <com.magnet.magnetchat.ui.custom.FTextView
                            android:id="@+id/tvPrimarySubscribers"
                            style="@style/style_text_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="@dimen/dimen_10" />

                </LinearLayout>

                <ImageView
                    style="@style/styleFitImageCenter"
                    android:layout_width="@dimen/dimen_11"
                    android:layout_height="@dimen/dimen_11"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:src="@drawable/arrow_right" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/styleCropImageCenter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60"
                    android:src="@drawable/ask_magnet"
                    android:id="@+id/ivSecondaryBackground"/>


                <LinearLayout
                    android:id="@+id/llSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/styleFitImageCenter"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_many" />

                    <View
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="match_parent" />

                    <com.magnet.magnetchat.ui.custom.FTextView
                        style="@style/style_text_default"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Ask Magnet"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    style="@style/styleFitImageCenter"
                    android:layout_width="@dimen/dimen_11"
                    android:layout_height="@dimen/dimen_11"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:src="@drawable/arrow_right" />

            </FrameLayout>


        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <!--<include layout="@layout/content_home" />-->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</android.support.design.widget.CoordinatorLayout>
