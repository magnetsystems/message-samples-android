<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_8"
    android:id="@+id/llPoll">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlName">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/ivRefresh"
            android:text="Name"
            android:id="@+id/tvName"/>
      <ImageView
          android:id="@+id/ivRefresh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_refresh_white_24dp"
          android:layout_alignParentRight="true"
      />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_below="@+id/rlName"
        android:text="Question"
        android:id="@+id/tvQuestion"/>

  <View
      android:id="@+id/viewBlank"
      android:layout_marginTop="2dp"
      android:layout_marginBottom="2dp"
      android:layout_below="@+id/tvQuestion"
      android:layout_width="match_parent"
      android:background="@color/white"
      android:layout_height="2dp" />

  <android.support.v7.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="@color/white"
      android:layout_below="@+id/viewBlank"
      android:text="Vote for your choices"
      android:id="@+id/tvVote"/>

    <com.magnet.magnetchat.ui.custom.ResizedListView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvVote"
        android:layout_alignParentBottom="true"
        android:dividerHeight="4dp"
        android:divider="@android:color/transparent"
        android:id="@+id/rvOptions">
    </com.magnet.magnetchat.ui.custom.ResizedListView>

  </RelativeLayout>